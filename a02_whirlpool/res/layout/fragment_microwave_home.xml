<?xml version="1.0" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="primaryMicrowaveViewModel"
            type="com.whirlpool.cooking.utils.MicrowaveMockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_layout_home">

        <TextView
            android:id="@+id/icon_40x"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="428dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.cooking.widgets.header.HeaderTop
            android:id="@+id/widget_header_top"
            android:layout_width="480dp"
            android:layout_height="47dp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textViewAssistedCookingMode"
            android:layout_width="424dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="186dp"
            android:alpha="0.8"
            android:background="@drawable/background_home_today_icon_background"
            android:clipChildren="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/home_today_icon_icon_oven_hometile_6thsense"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/sixth_sense_icon"/>

            <TextView
                android:id="@+id/home_today_icon_manual_functions"
                style="@style/H1SmallLight30"
                android:layout_width="311dp"
                android:layout_height="34dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="33dp"
                android:text="6th Sense Functions"
                android:textColor="#353535"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/home_today_icon_line"
                android:layout_width="18dp"
                android:layout_height="3dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/background_home_today_icon_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textViewHomeScreenManualMode"
            android:layout_width="424dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/background_home_today_icon_background"
            android:clipChildren="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/home_today_icon_1_icon_oven_hometile_manualmode"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/manual_modes_icon"/>

            <TextView
                android:id="@+id/home_today_icon_1_manual_functions"
                style="@style/H1SmallLight30"
                android:layout_width="311dp"
                android:layout_height="34dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="33dp"
                android:text="Manual Functions"
                android:textColor="#353535"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/home_today_icon_1_line"
                android:layout_width="18dp"
                android:layout_height="3dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/background_home_today_icon_1_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
