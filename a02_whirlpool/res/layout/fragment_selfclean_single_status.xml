<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cleanStatusFragment"
            type="com.whirlpool.cooking.selfclean.CleanStatusFragment" />

        <variable
            name="clockViewModel"
            type="com.whirlpool.hmi.uicomponents.widgets.clock.ClockViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="kitchenTimerVM"
            type="com.whirlpool.hmi.kitchentimer.KitchenTimerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_alabaster">

        <com.whirlpool.cooking.widgets.header.HeaderTop
            android:id="@+id/widget_header_top"
            android:layout_width="480dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.cooking.widgets.ProgressSetCookTime
            android:id="@+id/singleStatusProgressSetCookTime"
            android:layout_width="444dp"
            android:layout_height="127dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pyro_single_status_progress_basis="@{recipeViewModel.recipeProgressBasis}"
            app:pyro_single_status_progress_value="@{recipeViewModel.recipeProgressPercentage}"
            app:pyro_single_status_countdown_time="@{recipeViewModel.remainingCookTime}" />

        <ImageView
            android:id="@+id/icon_runningscreen_mwo"
            android:layout_width="128dp"
            android:layout_height="70dp"
            android:layout_marginStart="176dp"
            android:layout_marginTop="174dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/text_icon"
            android:layout_width="141dp"
            android:layout_height="30dp"
            android:layout_marginStart="313dp"
            android:layout_marginTop="174dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_readytime"
                style="@style/TileReg20"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:fontFamily="@font/roboto_regular"
                android:fontWeight="400"
                android:gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="22.0dp"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_30px_placeholder_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="111dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_secondary_3dots"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_long_buttons_button_3dots_long"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="16.0dp"
            android:textAllCaps="false"
            android:textColor="@color/color_whp_text_gray"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_secondary_1min_addtime"
            style="@style/W35ButtonBold20"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginStart="254dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_long_buttons_button_addtimelong"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:letterSpacing="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>