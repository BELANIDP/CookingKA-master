<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="480dp"
        android:layout_height="154dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_fragment_bottomsheet_tile">

        <View
            android:id="@+id/rectangle_1045"
            android:layout_width="65dp"
            android:layout_height="6dp"
            android:layout_marginStart="207dp"
            android:layout_marginTop="17dp"
            android:alpha="0.5"
            android:background="@drawable/background_rectangle_1045"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cycle_complete"
            style="@style/NumpadRegular30"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="324dp"
            android:layout_height="30dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="32dp"
            android:fontWeight="400"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:text="Cooling Down"
            android:lineHeight="30.0dp"
            android:textColor="#363636"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/since_7_min"
            style="@style/ClockLight20"
            android:layout_width="377dp"
            android:layout_height="54dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/roboto_light"
            android:fontWeight="300"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:text="Oven door is still locked..."
            android:lineHeight="34.0dp"
            android:textColor="#363636"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/since_7_min_1"
            style="@style/ClockLight20"
            android:layout_width="101dp"
            android:layout_height="34dp"
            android:layout_marginStart="356dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_light"
            android:fontWeight="300"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="34.0dp"
            android:textColor="#363636"
            android:visibility="gone"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_secondary_text_3dots"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="407dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/background_button_secondary_text_3dots"
            android:drawableLeft="@drawable/icon_3dotscategorytile"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="16.0dp"
            android:textAllCaps="false"
            android:textColor="#363636"
            android:textSize="16sp"
            android:visibility="gone"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_30px_endofcooking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/icon_30px_endofcooking"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_40px_endofcooking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/icon_40px_endofcooking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.grid.GridView
            android:id="@+id/bottomsheetRecycler"
            android:layout_width="1dp"
            android:layout_height="55dp"
            app:number_of_columns="2"
            app:item_spacing="11"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="99dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>