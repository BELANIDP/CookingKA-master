<?xml version="1.0" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atend_list_item"
        android:layout_width="754dp"
        android:layout_height="158dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/background_at_end_option">

        <View
            android:id="@+id/rectangle"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/atend_icon_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_at_end_title"
            style="@style/PopupTBigBold28"
            android:layout_width="550dp"
            android:layout_height="34dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="34dp"
            android:clipChildren="false"
            android:text="Text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/atend_description"
            android:layout_width="654dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="73dp"
            android:clipChildren="false"
            android:fontWeight="300"
            android:gravity="left|top"
            android:lineHeight="30.0dp"
            android:text="This will hold the oven temperature for longer until you turn off the oven - limit to 12 hours."
            android:textColor="#353535"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
