<?xml version="1.0"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="480dp"
        android:layout_height="181dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_fragment_bottomsheet_tile">

        <TextView
            android:id="@+id/popup_body"
            android:layout_width="352dp"
            android:layout_height="89dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="67dp"
            android:fontFamily="@font/roboto_light"
            android:fontWeight="300"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="23.0dp"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.grid.GridView
            android:id="@+id/bottomsheetRecycler"
            android:layout_width="1dp"
            android:layout_height="85dp"
            app:number_of_columns="2"
            app:item_spacing="11"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="99dp"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_1202"
            android:layout_width="367dp"
            android:layout_height="40dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/cycle_complete"
                style="@style/W35NumpadRegular30"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="324dp"
                android:layout_height="30dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="3dp"
                android:fontWeight="400"
                android:gravity="left|bottom"
                android:includeFontPadding="false"
                android:lineHeight="30.0dp"
                android:textColor="@color/dark_grey"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_40px_endofcooking"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_40px_endofcooking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>