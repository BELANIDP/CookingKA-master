<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8">

        <FrameLayout
            android:id="@+id/widget_popup_instruction"
            android:layout_width="445dp"
            android:layout_height="251dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/text_content"
                android:layout_width="379dp"
                android:layout_height="140dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/golddash"
                    android:layout_width="17dp"
                    android:layout_height="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/rectangle"
                        android:layout_width="17dp"
                        android:layout_height="2dp"
                        android:background="@drawable/background_golddash_rectangle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </FrameLayout>

                <TextView
                    android:id="@+id/popup_headline"
                    android:layout_width="379dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:fontWeight="400"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:lineHeight="32.0dp"
                    android:textColor="#363636"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/popup_body"
                    android:layout_width="379dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="42dp"
                    android:fontFamily="@font/roboto_light"
                    android:fontWeight="300"
                    android:gravity="left|top"
                    android:includeFontPadding="false"
                    android:lineHeight="22.0dp"
                    android:textColor="#363636"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressbar_popup"
            android:layout_width="378dp"
            android:layout_height="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="194dp"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/background_progress_bar_bar_progress_popup"
            android:secondaryProgress="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>