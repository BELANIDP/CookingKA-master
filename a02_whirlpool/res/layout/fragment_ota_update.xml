<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="otaViewModel"
            type="com.whirlpool.hmi.ota.viewmodel.OTAViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/screenBackground">

        <com.whirlpool.hmi.uicomponents.widgets.clock.ClockTextView
            android:id="@+id/ota_status_text_view_clock_digital_time"
            style="@style/CommonHomeAndStatusScreenDigitalClock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="5:30 PM"/>
        <View
            android:id="@+id/ota_status_view_wifi_state"
            style="@style/SingleStatusWifiFeatures"
            app:layout_constraintStart_toEndOf="@id/ota_status_text_view_clock_digital_time"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/status_wifi_features"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_status_update"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/ota_status_view_wifi_state"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:text="@string/text_ota_progress"/>


        <ProgressBar
            android:id="@+id/progress_bar_ota_update"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/status_progressbar_width"
            android:layout_height="@dimen/status_progressbar_height"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:max="100"
            android:progress="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_status_update"
            android:progressDrawable="@drawable/curved_progress_bar"
            tools:progress="30" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>