<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="primaryMicrowaveViewModel"
            type="com.whirlpool.cooking.utils.MicrowaveMockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_alabaster">

        <com.whirlpool.cooking.widgets.header.HeaderBarTimer
            android:id="@+id/HeaderBarTimer"
            android:layout_width="480dp"
            android:layout_height="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/numpadTextViewBottomRight"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginStart="354dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="20.0dp"
            android:textAllCaps="false"
            android:textColor="@color/color_whp_text_gray"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:letterSpacing="@integer/integer_range_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/numpadTextViewBottomLeft"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_button_cta_ghost_light_text"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="20.0dp"
            android:textAllCaps="false"
            android:textColor="@color/color_whp_text_gray"
            android:textSize="20sp"
            android:visibility="invisible"
            android:letterSpacing="0"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/widget_keypad"
            android:layout_width="480dp"
            android:layout_height="136dp"
            android:layout_marginTop="98dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.whirlpool.hmi.uicomponents.widgets.keyboard.KeyboardView
                android:id="@+id/keyboardView"
                android:layout_width="437dp"
                android:layout_height="115dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal|center_vertical"
                android:visibility="visible"
                app:keyBackground="@drawable/keypad_background"
                app:keyTextColor="?attr/NumpadTextColor"
                app:keyTextSize="@dimen/keyboard_key_TextSize"
                app:keyboardAlpha="@xml/keyboard_num"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:providePredictionCandidates="false"
                app:showKeyPopups="false" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_1"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="107dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_2"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="199dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_3"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="285dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_4"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="374dp"
                android:layout_marginTop="13dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_5"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="107dp"
                android:layout_marginTop="84dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_6"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="199dp"
                android:layout_marginTop="84dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_7"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="285dp"
                android:layout_marginTop="84dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_divider_8"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="374dp"
                android:layout_marginTop="84dp"
                android:background="@color/color_tumbler_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_keypad_widget_keypad_outline"
                android:layout_width="480dp"
                android:layout_height="136dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buttons"
            android:layout_width="287dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="250dp"
            android:background="@null"
            android:textAllCaps="false"
            android:visibility="gone"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/day"
            android:layout_width="91dp"
            android:layout_height="20dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="262dp"
            android:fontWeight="500"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="16.0dp"
            android:textColor="@color/color_whp_text_gray"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_warning"
            style="@style/Button35Bold20"
            android:layout_width="206dp"
            android:layout_height="29dp"
            android:layout_marginStart="137dp"
            android:layout_marginTop="258dp"
            android:alpha="0.63"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>