<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="primaryMicrowaveViewModel"
            type="com.whirlpool.cooking.utils.MicrowaveMockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_alabaster">

        <com.whirlpool.cooking.widgets.header.HeaderSingleIconDoubleText
            android:id="@+id/widget_header_topmenu"
            android:layout_width="480dp"
            android:layout_height="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="262dp"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="20.0dp"
            android:textColor="@color/color_whp_text_gray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_cta_ghost_light_text"
            style="@style/W35ButtonBold20"
            android:layout_width="0dp"
            android:maxWidth="280dp"
            android:minWidth="110dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/background_button_cta_ghost_light_text"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:letterSpacing="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/widget_parametermaster"
            android:layout_width="480dp"
            android:layout_height="146dp"
            android:layout_marginTop="95dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parameters_1"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text1"
                    style="@style/W35TpTitleParameterBold16"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:fontWeight="700"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:lineHeight="20.0dp"
                    android:textColor="@color/color_tumbler_divider"
                    android:textSize="16sp"
                    android:text="Text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/component_16"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="37dp"
                    android:layout_weight="1"
                    android:background="@color/color_whp_light_brand_primary"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/parameters_1_text"
                        style="@style/W35ParameterUnitBold28"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="17dp"
                        android:layout_weight="1"
                        android:text="Text" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parameters_2"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text2"
                    style="@style/W35TpTitleParameterBold16"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:fontWeight="700"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:lineHeight="20.0dp"
                    android:textColor="@color/color_tumbler_divider"
                    android:textSize="16sp"
                    android:text="Text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/component_16_1"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="37dp"
                    android:layout_weight="1"
                    android:background="@color/color_whp_light_brand_primary"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/parameters_2_text"
                        style="@style/W35ParameterUnitBold28"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="17dp"
                        android:layout_weight="1"
                        android:text="Text"
                    />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parameters_add_3"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text3"
                    style="@style/W35TpTitleParameterBold16"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:fontWeight="700"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:lineHeight="20.0dp"
                    android:textColor="@color/color_tumbler_divider"
                    android:textSize="16sp"
                    android:text="Text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/component_16_2"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="37dp"
                    android:layout_weight="1"
                    android:background="@color/color_whp_light_brand_primary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/parameters_add_3_add_time"
                        style="@style/W35ParameterUnitBold28"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="17dp"
                        android:layout_weight="1"
                        android:text="Text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/selection"
            android:layout_width="166dp"
            android:layout_height="28dp"
            android:layout_marginStart="287dp"
            android:layout_marginTop="258dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group_1387"
                android:layout_width="166dp"
                android:layout_height="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/frame_1341"
                    android:layout_width="108dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/text_5"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="28dp"
                        android:fontFamily="@font/roboto_bold"
                        android:fontWeight="700"
                        android:gravity="left|center_vertical"
                        android:includeFontPadding="false"
                        android:lineHeight="20.0dp"
                        android:textColor="@color/color_whp_text_gray"
                        android:textSize="20sp"
                        android:text="Preheat"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </FrameLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/toggle"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="110dp"
                    app:switchMinWidth="54dp"
                    android:theme="@style/MyActivityTheme"
                    android:thumb="@drawable/thumb_selector_toggle_switch"
                    app:track="@drawable/background_frame_1138_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>