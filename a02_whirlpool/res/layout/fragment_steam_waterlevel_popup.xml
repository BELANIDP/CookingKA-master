<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="445dp"
            android:layout_height="246dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/popup_icon_30px_placeholder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangle"
                android:layout_width="17dp"
                android:layout_height="2dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/background_golddash_rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/popup_headline"
                android:layout_width="297dp"
                android:layout_height="32dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/roboto_regular"
                android:fontWeight="400"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="32.0dp"
                android:textColor="@color/color_whp_text_gray"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/popup_body"
                android:layout_width="297dp"
                android:layout_height="88dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="77dp"
                android:fontFamily="@font/roboto_light"
                android:fontWeight="300"
                android:gravity="left|top"
                android:includeFontPadding="false"
                android:lineHeight="22.0dp"
                android:textColor="@color/color_whp_text_gray"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
                android:id="@+id/active_button_right"
                android:layout_width="87dp"
                android:layout_height="44dp"
                android:layout_marginStart="325dp"
                android:layout_marginTop="177dp"
                android:background="@drawable/background_active_buttons_button_cta_primary_active"
                android:fontFamily="@font/roboto_bold"
                android:fontWeight="700"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="20.0dp"
                android:textAllCaps="false"
                android:textColor="@color/color_whp_text_gray"
                android:textSize="20sp"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
