<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_background_lightmode_navigationscreen">

        <com.whirlpool.cooking.widgets.header.HeaderTop
            android:id="@+id/header_bar_top"
            android:layout_width="792dp"
            android:layout_height="40dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="15dp"
            android:clipChildren="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/provisioning_home_text_view_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/H3BigRegular30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_bar_top"
            tools:text="Title Text"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView"
            android:layout_width="796dp"
            android:layout_height="220dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="38dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provisioning_home_text_view_title">

            <ImageView
                android:id="@+id/provisioning_home_image_view_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/image_oven_140x140_menucycle_category_catpoultry_chickenwhole"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.024"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="140dp"
                tools:layout_conversion_absoluteWidth="140dp" />

            <TextView
                android:id="@+id/provisioning_home_text_card_title"
                style="@style/PopupTBigBold28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/provisioning_home_image_view_main"
                app:layout_constraintTop_toTopOf="@id/provisioning_home_image_view_main"
                tools:layout_conversion_absoluteHeight="33dp"
                tools:layout_conversion_absoluteWidth="287dp"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="128dp"
                tools:text="Connect Device" />

            <TextView
                android:id="@+id/provisioning_home_text_view_description"
                style="@style/Body1BigLight22"
                android:layout_width="584dp"
                android:layout_height="106dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="53dp"
                app:layout_constraintEnd_toEndOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@+id/provisioning_home_text_card_title"
                app:layout_constraintTop_toBottomOf="@+id/provisioning_home_text_card_title"
                tools:text="Download or open the Whirlpool app on your phone to get going. Make sure bluetooth and wifi on your phone are on and youâ€™re connected to your wifi network." />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/provisioning_home_button_setup_later"
            android:layout_width="108dp"
            android:layout_height="33.33dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="50.67dp"
            android:textStyle="bold"
            android:textSize="13.33sp"
            android:textAllCaps="false"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Secondary BButton"/>

        <Button
            android:id="@+id/provisioning_home_button_primary"
            style="@style/Button45Bold20"
            android:layout_width="139dp"
            android:layout_height="56dp"
            android:background="@drawable/background_button_cta_primary_active"
            android:gravity="center_horizontal|center_vertical"
            android:textAllCaps="false"
            android:textColor="?attr/NumpadTextColor"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp"
            tools:text="Next"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>