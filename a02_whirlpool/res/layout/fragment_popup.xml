<?xml version="1.0" ?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <View
            android:id="@+id/line"
            android:layout_width="17dp"
            android:layout_height="2dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="333dp"
            android:background="@drawable/background_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ctaButtonPrimaryActive"
            style="@style/Button45Bold20"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_marginStart="367dp"
            android:layout_marginTop="265dp"
            android:background="@drawable/background_cta_primary_active"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="?attr/NumpadTextColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/singleStatusTextViewBottomLeft"
            style="@style/Button45Bold20"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="265dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/background_button_cta_ghost_light_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textView_popupinformation"
            android:layout_width="442dp"
            android:layout_height="153dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/background_home_today_background"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/widget_popup_textonlyautolayout_title"
                style="@style/Button45Bold20"
                android:layout_width="354dp"
                android:layout_height="25dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:fontWeight="400"
                android:gravity="left|top"
                android:lineHeight="34.0dp"
                android:text="Text"
                android:textColor="#353535"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/widget_popup_textonlyautolayout_text"
                android:layout_width="376dp"
                android:layout_height="54dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="69dp"
                android:fontFamily="@font/roboto_light"
                android:fontWeight="300"
                android:gravity="left|top"
                android:includeFontPadding="false"
                android:lineHeight="18.0dp"
                android:textColor="#353535"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/widget_popup_textonlyautolayout_rectangle"
                android:layout_width="17dp"
                android:layout_height="2dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_home_today_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.whirlpool.cooking.widgets.header.HeaderTop
            android:id="@+id/widget_header_top"
            android:layout_width="480dp"
            android:layout_height="47dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
