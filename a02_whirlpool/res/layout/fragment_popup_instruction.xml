<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/widget_popup_instruction"
            android:layout_width="445dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/golddash"
                android:layout_width="17dp"
                android:layout_height="2dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/rectangle"
                    android:layout_width="17dp"
                    android:layout_height="2dp"
                    android:background="@drawable/background_golddash_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <TextView
                android:id="@+id/popup_headline"
                android:layout_width="376dp"
                android:layout_height="26dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="41dp"
                android:fontWeight="400"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/roboto_regular"
                android:includeFontPadding="false"
                android:lineHeight="26.0dp"
                android:textColor="#363636"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/popup_body"
                android:layout_width="376dp"
                android:layout_height="44dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="71dp"
                android:fontFamily="@font/roboto_light"
                android:fontWeight="300"
                android:gravity="left|top"
                android:includeFontPadding="false"
                android:lineHeight="22.0dp"
                android:textColor="#363636"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>