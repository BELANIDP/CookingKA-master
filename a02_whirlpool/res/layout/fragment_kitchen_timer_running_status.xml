<?xml version="1.0"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="recipeViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeebe2">

        <com.whirlpool.hmi.kitchentimer.uicomponents.widgets.KitchenTimerTextView
            android:id="@+id/text_cooktime"
            android:layout_width="317dp"
            android:layout_height="93.75dp"
            android:layout_marginStart="82dp"
            android:layout_marginTop="111dp"
            android:fontFamily="@font/roboto_regular"
            android:fontWeight="400"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="93.75dp"
            android:textColor="#363636"
            app:always_show_hours="true"
            app:inactive_style="@style/TumblerDateTimeNonSelectedTextStyle"
            android:textSize="80sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingClass" />

        <com.whirlpool.cooking.widgets.header.HeaderSingleIconDoubleText
            android:id="@+id/HeaderBar"
            android:layout_width="480dp"
            android:layout_height="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/section"
            android:layout_width="37dp"
            android:layout_height="22dp"
            android:layout_marginStart="222dp"
            android:layout_marginTop="86dp"
            android:fontFamily="@font/roboto_regular"
            android:fontWeight="400"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="22.0dp"
            android:textColor="#363636"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_1197"
            android:layout_width="371dp"
            android:layout_height="44dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="215dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_cancel"
                style="@style/Button35Bold20"
                android:layout_width="111dp"
                android:layout_height="44dp"
                android:background="@drawable/background_frame_1197_button_secondary_text_active"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_1min_addtime"
                style="@style/Button35Bold20"
                android:layout_width="111dp"
                android:layout_height="44dp"
                android:layout_marginStart="130dp"
                android:background="@drawable/background_frame_1197_button_secondary_text_active"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_resume"
                style="@style/Button35Bold20"
                android:layout_width="111dp"
                android:layout_height="44dp"
                android:layout_marginStart="260dp"
                android:background="@drawable/background_frame_1197_button_secondary_text_active"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>