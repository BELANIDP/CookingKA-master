<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cookingVM"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />
        <variable
            name="informationFragment"
            type="com.whirlpool.cooking.base.AbstractInstructionFragment" />
        <variable
            name="settingsViewModel"
            type="com.whirlpool.hmi.settings.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeebe2">

        <com.whirlpool.cooking.widgets.header.HeaderBar
            android:id="@+id/header_bar_information"
            android:layout_width="480dp"
            android:layout_height="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/text"
            android:layout_width="376dp"
            android:layout_height="164dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/golddash"
                android:layout_width="17dp"
                android:layout_height="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/rectangle"
                    android:layout_width="17dp"
                    android:layout_height="2dp"
                    android:background="@drawable/background_golddash_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame_1294"
                android:layout_width="376dp"
                android:layout_height="162dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textViewScrollInstructions"
                    android:layout_width="376dp"
                    android:layout_height="132dp"
                    android:fontFamily="@font/roboto_light"
                    android:fontWeight="300"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:lineHeight="22.0dp"
                    android:lineSpacingExtra="-1sp"
                    android:text="WIFI5G: Very Good\nIP: 123.123.123.123\nSubnet Mask:123.123.123.123\u00E2\u0080\u00A8Router IP 123.123.123.123\nDNS 1.1.1.1.1.1.1.2.2.2.\nRSSI: 50dBm"
                    android:textColor="#363636"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="428dp"
            android:layout_height="44dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/buttonRightStart"
                android:layout_width="87dp"
                android:layout_height="44dp"
                android:layout_marginStart="341dp"
                android:background="@drawable/background_frame_1170_button_cta_primary_active"
                android:fontWeight="700"
                android:gravity="center_horizontal|center_vertical"
                android:lineHeight="16.0dp"
                android:text="@string/text_okay"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="false"
                android:textColor="#363636"
                android:textSize="20sp"
                android:letterSpacing="0"
                android:includeFontPadding="false"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonLeft"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="199dp"
                android:layout_height="44dp"
                android:background="@drawable/background_frame_1170_button_cta_ghost_light_text"
                android:fontWeight="700"
                android:gravity="center_horizontal|center_vertical"
                android:lineHeight="16.0dp"
                android:text="@string/text_forget_network"
                android:textAllCaps="false"
                android:textColor="#363636"
                android:includeFontPadding="false"
                android:textSize="20sp"
                android:letterSpacing="0"
                app:backgroundTint="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

