<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="480dp"
        android:layout_height="236dp"
        android:background="@drawable/background_fragment_bottomsheet_tile">

        <TextView
            android:id="@+id/time_format"
            android:layout_width="252dp"
            android:layout_height="33dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/roboto_regular"
            android:fontWeight="400"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="22.0dp"
            android:textColor="#363636"
            android:textSize="26sp"
            android:text="Time Format"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_1134"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon_50px_backarrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_50px_backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_cta_primary_active"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_marginStart="369dp"
            android:layout_marginTop="163dp"
            android:background="@drawable/background_button_cta_primary_active"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="20.0dp"
            android:textAllCaps="false"
            android:textColor="#363636"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:text="Set"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_1195"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_marginStart="177dp"
            android:layout_marginTop="179dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/figures"
                android:layout_width="101dp"
                android:layout_height="28dp"
                android:fontFamily="@font/roboto_regular"
                android:fontWeight="400"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="32.0dp"
                android:textColor="#363636"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/am_pm"
                android:layout_width="34dp"
                android:layout_height="32dp"
                android:layout_marginStart="67dp"
                android:fontFamily="@font/roboto_regular"
                android:fontWeight="400"
                android:gravity="right|top"
                android:includeFontPadding="false"
                android:lineHeight="32.0dp"
                android:textColor="#363636"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_58"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="81dp"
            style="@style/Divider.Vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frame_1189"
            android:layout_width="77dp"
            android:layout_height="61dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="99dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/time_format_12"
                android:layout_width="65dp"
                android:layout_height="61dp"
                android:layout_marginStart="12dp"
                android:fontWeight="500"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="60.9375dp"
                android:textColor="#363636"
                android:textSize="52sp"
                android:text="12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/h"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginStart="192dp"
            android:layout_marginTop="116dp"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="28.0dp"
            android:text="H"
            android:textColor="#363636"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frame_1189_1"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="101dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/time_format_24"
                android:layout_width="61dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:fontWeight="500"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:lineHeight="49.21875dp"
                android:textColor="#9f9e9e"
                android:textSize="42sp"
                android:text="24"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/h_1"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_marginStart="333dp"
            android:layout_marginTop="116dp"
            android:fontFamily="@font/roboto_bold"
            android:fontWeight="700"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:lineHeight="20.0dp"
            android:textColor="#9f9e9e"
            android:textSize="20sp"
            android:text="H"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.grid.GridView
            android:id="@+id/bottomsheetRecycler"
            android:layout_width="4dp"
            android:layout_height="5dp"
            app:number_of_columns="2"
            app:item_spacing="11"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>