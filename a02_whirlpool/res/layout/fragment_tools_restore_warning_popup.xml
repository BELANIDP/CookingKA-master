<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/widget_popup"
            android:layout_width="442dp"
            android:layout_height="246dp"
            android:background="@drawable/background_restore_warning_popup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="379dp"
                android:layout_height="140dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="17dp"
                    android:layout_height="2dp"
                    android:background="@drawable/background_golddash_rectangle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/popup_headline"
                    android:layout_width="379dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:fontWeight="400"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:lineHeight="32.0dp"
                    android:textColor="@color/color_whp_text_gray"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/popup_body"
                    android:layout_width="379dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="42dp"
                    android:fontFamily="@font/roboto_light"
                    android:fontWeight="300"
                    android:gravity="start|top"
                    android:includeFontPadding="false"
                    android:lineHeight="22.0dp"
                    android:textColor="@color/color_whp_text_gray"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="379dp"
                android:layout_height="45dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="177dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
                    android:id="@+id/active_button_left"
                    android:layout_width="122dp"
                    android:layout_height="44dp"
                    android:background="@drawable/background_active_buttons_buttons_primary"
                    android:fontFamily="@font/roboto_bold"
                    android:fontWeight="700"
                    android:gravity="center_horizontal|center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:lineHeight="20.0dp"
                    android:textAllCaps="false"
                    android:textColor="@color/color_whp_text_gray"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
                    android:id="@+id/active_button_right"
                    android:layout_width="135dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="244dp"
                    android:background="@drawable/background_active_buttons_button_cta_primary_active"
                    android:fontFamily="@font/roboto_bold"
                    android:fontWeight="700"
                    android:gravity="center_horizontal|center_vertical"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:lineHeight="20.0dp"
                    android:textAllCaps="false"
                    android:textColor="@color/color_whp_text_gray"
                    android:textSize="20sp"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
