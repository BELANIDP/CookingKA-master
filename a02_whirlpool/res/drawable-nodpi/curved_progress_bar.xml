<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20dip" />
            <solid android:color="?attr/statusScreenProgressBarBackground" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:startColor="?attr/statusScreenProgressBarBackground"
                    android:centerColor="?attr/statusScreenProgressBarBackground"
                    android:centerY="0.75"
                    android:endColor="?attr/statusScreenProgressBarBackground"
                    android:angle="270" />

            </shape>
        </clip>
    </item>


    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="10dip" />
                <gradient
                    android:startColor="?attr/secondaryBrandColor"
                    android:endColor="?attr/secondaryBrandColor"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>