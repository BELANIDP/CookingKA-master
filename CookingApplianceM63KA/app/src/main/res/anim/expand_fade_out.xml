<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Scale animation for rapidly expanding the view -->
    <scale
        android:fromXScale="1.0"
        android:toXScale="1.0"
        android:fromYScale="1.0"
        android:toYScale="3.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="@integer/ms_250" />

    <!-- Translate animation for moving the view to the top of the screen -->
    <translate
        android:fromYDelta="0%"
        android:toYDelta="100%"
        android:duration="@integer/ms_250" />
    <translate
        android:fromYDelta="0%"
        android:toYDelta="-100%"
        android:duration="@integer/ms_250" />

    <!-- Alpha animation for fading out the view -->
    <alpha
        android:fromAlpha="1.0"
        android:toAlpha="0.0"
        android:duration="@integer/ms_250" />
</set>
