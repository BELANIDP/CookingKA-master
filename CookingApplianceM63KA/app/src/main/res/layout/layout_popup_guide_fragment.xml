<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transparent_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_solid_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/popup_with_scroll"
            style="@style/PopupViewStyle"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                style="@style/PopupTextViewBoundsStyle"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/app_name"
                android:visibility="visible"/>

            <ProgressBar
                android:id="@+id/popup_progressbar"
                style="@style/PopupProgressBarStyle"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_notification"
                style="@style/PopupNotificationTextViewStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/app_name" />

            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceImageView
                android:id="@+id/ivPopupInstructionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                app:layout_constraintBottom_toTopOf="@+id/text_button_right"
                app:layout_constraintStart_toStartOf="parent"/>

            <ScrollView
                android:id="@+id/scroll_view"
                style="@style/PopupInfoScrollStyle"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/margin_popup_container_start"
                android:layout_marginTop="@dimen/probe_guide_margin_and_padding"
                app:layout_constraintStart_toEndOf="@id/ivPopupInstructionImage"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                app:layout_constraintBottom_toTopOf="@+id/text_button_right">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_description"
                    android:gravity="start"
                    style="@style/PopupDescriptionTextViewStyle"/>
            </ScrollView>

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_left"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="true"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_center"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="true"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_right"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="false"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
