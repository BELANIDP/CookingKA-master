<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainRadioButtonView"
        style="@style/RadioButtonLayoutStyle">

        <ImageView
            android:id="@+id/image_view_radio_button_outer_ring"
            style="@style/RadioButtonLayoutStyle.RadioButtonOuterRingStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/image_view_radio_button_inner_ring"
            style="@style/RadioButtonInnerRingStyle"
            app:layout_constraintBottom_toBottomOf="@id/image_view_radio_button_outer_ring"
            app:layout_constraintLeft_toLeftOf="@id/image_view_radio_button_outer_ring"
            app:layout_constraintRight_toRightOf="@id/image_view_radio_button_outer_ring"
            app:layout_constraintTop_toTopOf="@id/image_view_radio_button_outer_ring"
            android:importantForAccessibility="no" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>