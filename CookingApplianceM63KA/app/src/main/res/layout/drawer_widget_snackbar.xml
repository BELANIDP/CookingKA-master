<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/topSheetOutside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/black"
        android:soundEffectsEnabled="false"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/top_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawerbar_height"
        app:behavior_peekHeight="@dimen/peek_height"
        app:layout_behavior="android.presenter.customviews.topsheet.TopSheetBehavior">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerbar_item_height"
            android:background="@drawable/drawerbar_shape"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/list_item_title_text_view"
            style="@style/ListTileMainTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center|center_horizontal"
            android:text="@string/text_oven_light_off"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/peek_height"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/ic_drawerhandle"
            tools:ignore="ContentDescription"/>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
