<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageMainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/tumbler_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.whirlpool.hmi.uicomponents.widgets.tumblers.BaseTumbler
        android:id="@+id/tumblerString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tumbler_string_margin_top"
        android:gravity="center_vertical"
        app:baseTumbler_item_divider="@drawable/ic_separator"
        app:baseTumbler_item_spacing="@integer/tumbler_item_spacing"
        app:baseTumbler_scrollSpeed="@integer/tumbler_scroll_speed"
        app:baseTumbler_maxFlingVelocity="@integer/tumbler_max_fling_velocity"
        app:baseTumbler_textViewStyle="@style/TumblerTextViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBar" />

    <View
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constrainedHeight="@bool/_true"
        app:layout_constraintTop_toBottomOf="@+id/headerBar"
        android:background="@drawable/tumbler_gradient"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDurationRight"
        android:layout_width="@dimen/width_touch_constraint"
        android:layout_height="@dimen/height_touch_constraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/LinearLayoutPrimaryBtnStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/btnPrimary"
            style="@style/TumblerPrimaryBtnStyle"
            tools:text="next"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDurationLeft"
        android:layout_width="@dimen/width_touch_constraint"
        android:layout_height="@dimen/height_touch_constraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/LinearLayoutGhostBtnStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgGhost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/btnGhost"
            style="@style/TumblerGhostBtnStyle"
            tools:text="cancel"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
