<?xml version="1.0"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_solid_black">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/demo_mode_pageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="bottom" />

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/see_video_demo_mode_header_bar"
        style="@style/StyleDemoModeVideoPreviewHeaderBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_play_pause_controls"
        style="@style/StyleVideoPlayerControlDemoModeVideoPreview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image_view_previous_button"
            style="@style/StyleDemoModeVideoPreviewPlayerControlIcons"
            android:contentDescription="@string/text_header_see_video"
            android:src="@drawable/ic_video_prev"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_pause_button"
            style="@style/StyleDemoModeVideoPreviewPlayerControlIcons"
            android:contentDescription="@string/text_header_see_video"
            android:src="@drawable/ic_kt_pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_next_button"
            style="@style/StyleDemoModeVideoPreviewPlayerControlIcons"
            android:contentDescription="@string/text_header_see_video"
            android:src="@drawable/ic_video_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>