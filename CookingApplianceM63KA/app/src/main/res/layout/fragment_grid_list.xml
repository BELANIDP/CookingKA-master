<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="settingsViewModel"
            type="com.whirlpool.hmi.settings.SettingsViewModel" />

        <variable
            name="gridListFragment"
            type="android.presenter.basefragments.AbstractGridListFragment" />

        <variable
            name="gridListKtnFragment"
            type="android.presenter.basefragments.AbstractGridListFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ListScreenStyle">

        <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
            android:id="@+id/headerBarGridList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_solid_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <com.whirlpool.hmi.uicomponents.widgets.grid.GridView
            android:id="@+id/recycler_view_grid_list"
            style="@style/ListScrollBarStyle.ListRecyclerViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="6"
            tools:listitem="@layout/item_gridlist_with_image_tile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerBarGridList" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
