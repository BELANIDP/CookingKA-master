<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@color/black">

        <View
            android:id="@+id/view_list_seperator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_seperator_height"
            android:background="@color/settingMenuSeperator"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/llListHeading"
            style="@style/SettingHeadingStyle"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/settings_list_heading_margin_bottom"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_list_seperator"
            tools:text="Lorem Ipsum" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_main_view"
            style="@style/ListTileMainViewStyle"
            android:layout_height="@dimen/network_settings_item_height_list_tile"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llListHeading">

            <android.presenter.customviews.radiobutton.RadioButton
                android:id="@+id/list_item_radio_button"
                style="@style/ListTileRadioButtonStyle"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/list_item_icon_image_view"
                style="@style/ListTileIconStyle"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/list_item_title_text_view"
                style="@style/ListTileMainTextViewStyle"
                app:layout_constraintBottom_toTopOf="@id/list_item_sub_text_view"
                app:layout_constraintStart_toEndOf="@id/list_item_icon_image_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Lorem Ipsum Dolor" />

            <TextView
                android:id="@+id/list_item_sub_text_view"
                style="@style/ListTileSubTextViewStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/list_item_icon_image_view"
                app:layout_constraintTop_toBottomOf="@+id/list_item_title_text_view"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Lorem Ipsum Dolor" />


            <TextView
                android:id="@+id/list_item_right_text_view"
                style="@style/ListTileRightTextViewStyle"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/list_item_image_view_right_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Set up"
                tools:textColor="@color/common_solid_black"
                tools:visibility="visible" />

            <com.whirlpool.hmi.uicomponents.widgets.clock.ClockTextView
                android:id="@+id/list_item_right_clock_text_view"
                style="@style/ListTileRightTextViewStyle"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/list_item_image_view_right_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Set up"
                tools:textColor="@color/colorWhite"
                tools:visibility="visible" />
            <ImageView
                android:id="@+id/list_item_image_view_right_icon"
                style="@style/ListTileIconStyleForwardIcon"
                android:src="@drawable/ic_rightarrowicon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <android.presenter.customviews.widgets.toggleswitch.ToggleSwitch
                android:id="@+id/settings_item_toggle_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/list_item_divider_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_connectivity_divider_view_height"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

