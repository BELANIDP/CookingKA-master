<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="core.utils.LiveLookInPreviewFragment">

    <TextureView
        android:id="@+id/hmi_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">
    </TextureView>

    <ImageView
        android:id="@+id/backButtonImage"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="59.5dp"
        android:contentDescription="@string/app_name"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:soundEffectsEnabled="false"
        android:visibility="visible"
        tools:src="@drawable/ic_back_arrow_camera_preview" />

    <Button
        android:id="@+id/btn_preview_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:text="Capture Image"/>

</RelativeLayout>