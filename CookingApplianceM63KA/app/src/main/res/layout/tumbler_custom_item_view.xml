<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stringTumblerItemBase"
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_height="wrap_content">
    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:id="@+id/title"
        style="@style/StringTumblerTitleTextView"
        tools:text="Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:id="@+id/sub_title"
        style="@style/StringTumblerSubtitleTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1hr 30min"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>