<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/more_options_popup_item_tile_width"
    android:layout_height="@dimen/more_options_tile_data_height">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/more_options_tile"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/more_options_popup_item_text_tile_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_item_tile"
            style="@style/MoreOptionsPopupListIconStyle"
            android:visibility="visible"
            android:contentDescription="@string/text_header_more_options"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.presenter.customviews.textButton.TextButtonMultiLine
            android:id="@+id/modes_text_view"
            style="@style/MoreOptionsPopupTextButtonStyle"
            app:enable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_item_tile"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>