<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_check_box"
            style="@style/CheckBoxTextViewBoundsStyle"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/image_view_check_box"
            app:layout_constraintLeft_toRightOf="@id/image_view_check_box"
            app:layout_constraintTop_toTopOf="@id/image_view_check_box"
            tools:text="@string/text_checkbox_default" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_check_box"
            style="@style/CheckBoxImageViewBoundsStyle"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/animated_vector_checkbox_unchecked" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>