<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutGridItem"
    android:layout_width="@dimen/convect_option_tile_width"
    android:layout_height="@dimen/convect_option_tile_height"
    android:background="@color/very_dark_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_convect_recipe"
        style="@style/ConvectOptionsTileImageViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_convect_option_name"
        style="@style/ConvectOptionsTileTitleTextViewStyle"
        android:layout_marginStart="@dimen/convect_option_tile_image_margin_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginStart="@dimen/convect_option_tile_text_margin"
        app:layout_constraintStart_toEndOf="@+id/image_view_convect_recipe"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/meat"
        />


</androidx.constraintlayout.widget.ConstraintLayout>