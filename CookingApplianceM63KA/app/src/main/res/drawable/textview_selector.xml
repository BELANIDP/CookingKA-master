<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Color when pressed -->
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Color when focused -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#AAA5A1" /> <!-- Default color -->
        </shape>
    </item>

</selector>
