<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/diagnostics_parentLayout"
        style="@style/DefaultDiagnosticsListItemStyle"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/service_cavitylist_padding_start"
        android:paddingEnd="@dimen/service_cavitylist_padding_start"
        android:minHeight="@dimen/default_diagnostics_generic_list_item_height"
        android:layout_height="wrap_content">

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/result_item_padding"
            app:layout_constraintRight_toLeftOf="@+id/icon_navigation"
            style="@style/DefaultDiagnosticsListItemTitleTextStyle"
            android:paddingEnd="@dimen/diagnostics_list_item_icons_barrier_padding"
            android:paddingStart="@dimen/diagnostics_list_item_icons_barrier_margin"
            android:layout_marginEnd="@dimen/diagnostics_list_item_icons_barrier_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/service_cavitylist_item_bottom_margin"
            android:layout_marginStart="@dimen/diagnostics_list_item_icons_barrier_padding"
            app:layout_constraintBottom_toTopOf="@id/subtitle"
            app:layout_constraintLeft_toRightOf="@id/icon_result"
            tools:text="Title" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/subtitle"
            style="@style/DefaultDiagnosticsListItemDescriptionTextStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="SubTitle" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/description"
            style="@style/DefaultDiagnosticsListItemDescriptionTextStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            tools:text="Description" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/diagnostics_checkbox_height_width"
            android:layout_height="@dimen/diagnostics_checkbox_height_width"
            android:button="@drawable/diagnostics_checkbox"
            android:visibility="gone"
            tools:visibility="visible"
            app:buttonTint="@color/walnut"
            android:layout_marginEnd="@dimen/diagnostics_list_item_icons_barrier_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/service_cavitylist_item_bottom_margin"
             />

        <ImageView
            android:id="@+id/icon_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rightarrowicon"
            android:contentDescription="@string/str_next"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/str_next"
            android:visibility="gone"
            tools:background="@drawable/auto_diagnostics_results_success"
            android:layout_marginEnd="@dimen/diagnostics_list_item_icons_barrier_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/value"
            style="@style/ServiceDiagnosticsListItemDescriptionTextStyle"
            android:layout_width="wrap_content"
            android:gravity="end"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_navigation"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Value" />

        <View
            android:id="@+id/list_item_divider_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diagnostics_list_item_label_divider_margin_top"
            android:background="@color/light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>