<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/DiagnosticsListItemStyle"
        android:background="@null">

        <View
            android:id="@+id/divider1"
            android:layout_width="@dimen/diagnostics_list_item_header_divider_width"
            android:layout_height="@dimen/diagnostics_list_item_header_divider_height"
            android:visibility="gone"
            android:background="@color/diagnostics_secondary_text"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toStartOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/title"
            style="@style/DefaultDiagnosticsListItemTitleTextStyle"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider2"
            app:layout_constraintStart_toEndOf="@id/divider1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="@dimen/diagnostics_list_item_header_divider_width"
            android:layout_height="@dimen/diagnostics_list_item_header_divider_height"
            android:background="@color/diagnostics_secondary_text"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>