<?xml version="1.0"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="@dimen/diagnostics_reboot_view_width"
            android:layout_height="@dimen/diagnostics_reboot_view_height"
            android:layout_marginStart="@dimen/service_reboot_view_margin_top_start"
            android:layout_marginTop="@dimen/service_reboot_view_margin_top_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="@dimen/diagnostics_reboot_view_width"
                android:layout_height="@dimen/diagnostics_reboot_content_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_112px_alert"
                    android:layout_width="@dimen/diagnostics_reboot_alert_height_weight"
                    android:layout_height="@dimen/diagnostics_reboot_alert_height_weight"
                    android:layout_marginStart="@dimen/service_reboot_view_content_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="contentDescription" />

                <ImageView
                    android:id="@+id/icon_120px_checkmark"
                    android:layout_width="@dimen/diagnostics_reboot_checkmark_height_weight"
                    android:layout_height="@dimen/diagnostics_reboot_checkmark_height_weight"
                    android:layout_marginStart="@dimen/service_reboot_view_content_start"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="contentDescription" />

                <FrameLayout
                    android:id="@+id/header"
                    android:layout_width="@dimen/diagnostics_reboot_view_width"
                    android:layout_height="@dimen/diagnostics_reboot_view_title_height"
                    android:layout_marginTop="@dimen/service_reboot_title_margin_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                        android:id="@+id/header_text_title"
                        style="@style/StyleServiceTitleStatusTextView"
                        android:layout_width="@dimen/diagnostics_reboot_view_width"
                        android:layout_height="@dimen/diagnostics_reboot_view_title_height"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </FrameLayout>

                <TextView
                    android:id="@+id/description_text"
                    style="@style/rebootDescriptionTextStyle"
                    android:layout_width="@dimen/diagnostics_reboot_view_width"
                    android:layout_height="@dimen/diagnostics_reboot_view_description_height"
                    android:layout_marginTop="@dimen/service_reboot_description_margin_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
                android:id="@+id/primary_reset_button"
                style="@style/servicePrimaryBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagnostics_status_button_height"
                android:visibility="visible"
                app:selection_audio="none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:textAllCaps="true" />

            <View
                android:id="@+id/selectionLinePrimaryButton"
                app:layout_constraintStart_toStartOf="@id/primary_reset_button"
                app:layout_constraintEnd_toEndOf="@id/primary_reset_button"
                app:layout_constraintTop_toBottomOf="@+id/primary_reset_button"
                android:visibility="gone"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_4"
                android:background="@color/black_walnut"/>

            <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
                android:id="@+id/secondary_reset_button"
                style="@style/serviceGhostBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagnostics_status_button_height"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:textAllCaps="true" />

            <View
                android:id="@+id/selectionLineSecondaryButton"
                app:layout_constraintStart_toStartOf="@id/secondary_reset_button"
                app:layout_constraintEnd_toEndOf="@id/secondary_reset_button"
                app:layout_constraintTop_toBottomOf="@+id/secondary_reset_button"
                android:visibility="gone"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_4"
                android:background="@color/black_walnut"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/icon_hour_glass_timer"
            android:layout_width="@dimen/diagnostics_reboot_alert_height_weight"
            android:layout_height="@dimen/diagnostics_reboot_alert_height_weight"
            android:layout_marginStart="@dimen/service_reboot_hourglass_margin_start"
            android:layout_marginTop="@dimen/service_reboot_hourglass_margin_top"
            android:visibility="gone"
            tools:ignore="contentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/do_not_unplug_appliance"
                style="@style/rebootDoNotPlugTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/service_reboot_plug_margin_start"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>