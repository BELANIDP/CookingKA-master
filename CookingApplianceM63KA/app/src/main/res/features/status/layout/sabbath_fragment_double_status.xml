<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModelFactory"/>
        <variable
            name="settingViewModel"
            type="com.whirlpool.hmi.settings.SettingsViewModel" />
        <variable
            name="primaryCookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="primaryRecipeExecutionViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="secondaryCookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="secondaryRecipeExecutionViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="statusFragment"
            type="android.presenter.basefragments.AbstractStatusFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/width_app_window"
        android:background="@color/common_solid_black"
        android:layout_height="@dimen/height_app_window">

        <android.presenter.customviews.widgets.status.CookingStatusWidget
            android:id="@+id/singleUpperStatusWidget"
            style="@style/SabbathStyleDoubleStatusUpperWidgetLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:oven_type="@string/cavity_selection_upper_oven"
            app:sabbath_type="true"

            app:sabbath_status_execution_fragment="@{statusFragment}"
            app:sabbath_status_execution_view_model="@{primaryCookingViewModel}"
            app:sabbath_status_execution_state="@{primaryRecipeExecutionViewModel.recipeExecutionState}"

            app:sabbath_status_recipe_cook_view_model="@{primaryCookingViewModel}"
            app:sabbath_status_recipe_fragment="@{statusFragment}"
            app:sabbath_status_recipe_text_recipe_name="@{primaryRecipeExecutionViewModel.recipeName}"

            app:sabbath_status_etr_cook_view_model="@{primaryCookingViewModel}"
            app:sabbath_status_etr_cook_timer_fragment="@{statusFragment}"
            app:sabbath_status_etr_cook_timer_recipe_timer_state="@{primaryRecipeExecutionViewModel.cookTimerState}"
            app:sabbath_status_etr_cook_timer_remaining_cook_time="@{primaryRecipeExecutionViewModel.remainingCookTime}"
            />
        <android.presenter.customviews.widgets.status.CookingStatusWidget
            android:id="@+id/singleLowerStatusWidget"
            style="@style/SabbathStyleDoubleStatusLowerWidgetLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:oven_type="@string/cavity_selection_lower_oven"
            app:sabbath_type="true"

            app:sabbath_status_execution_fragment="@{statusFragment}"
            app:sabbath_status_execution_view_model="@{secondaryCookingViewModel}"
            app:sabbath_status_execution_state="@{secondaryRecipeExecutionViewModel.recipeExecutionState}"

            app:sabbath_status_recipe_cook_view_model="@{secondaryCookingViewModel}"
            app:sabbath_status_recipe_fragment="@{statusFragment}"
            app:sabbath_status_recipe_text_recipe_name="@{secondaryRecipeExecutionViewModel.recipeName}"

            app:sabbath_status_etr_cook_view_model="@{secondaryCookingViewModel}"
            app:sabbath_status_etr_cook_timer_fragment="@{statusFragment}"
            app:sabbath_status_etr_cook_timer_recipe_timer_state="@{secondaryRecipeExecutionViewModel.cookTimerState}"
            app:sabbath_status_etr_cook_timer_remaining_cook_time="@{secondaryRecipeExecutionViewModel.remainingCookTime}"
            />

        <android.presenter.customviews.widgets.headerbar.NoTitleHeaderBarWidget
            android:id="@+id/oven_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>