<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModelFactory" />

        <variable
            name="isCookTimeAvailable"
            type="Boolean" />

        <variable
            name="isVisionRecipe"
            type="Boolean" />

        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="cookingStatusWidget"
            type="android.presenter.customviews.widgets.status.CookingStatusWidget" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusPrentView"
        android:layout_width="@dimen/width_app_window"
        android:layout_height="@dimen/status_widget_height"
        android:background="@color/common_solid_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clModeLayout"
            style="@style/StatusWidgetRecipeAction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivOvenCavity"
                    style="@style/StatusWidgetOvenCavityIconStyle"
                    android:layout_gravity="center_vertical"
                    android:visibility="@{CookingViewModelFactory.getProductVariantEnum() == CookingViewModelFactory.ProductVariantEnum.COMBO || CookingViewModelFactory.getProductVariantEnum() == CookingViewModelFactory.ProductVariantEnum.DOUBLEOVEN || isVisionRecipe ? View.VISIBLE : View.GONE}"
                    tools:ignore="ContentDescription" />

                <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                    android:id="@+id/tvRecipeWithTemperature"
                    style="@style/StyleCookingStatusWidgetTextView"
                    android:focusableInTouchMode="false"
                    android:includeFontPadding="false"
                    android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                    tools:text="Crown Lamb Roast 375 | Medium" />

                <ImageView
                    android:id="@+id/ivTemperatureRamp"
                    style="@style/StatusWidgetTemperatureRampStyle"
                    android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/ivProbeIcon"
                style="@style/StatusWidgetOvenProbeIconStyle"
                android:layout_marginEnd="@dimen/probe_icon_margin_horizontal"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                android:src="@drawable/ic_probe_oven"
                android:visibility="@{cookingViewModel.recipeExecutionViewModel.probeBasedRecipe ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCookTimeRemaining"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                android:id="@+id/tvCookTimeRemaining"
                style="@style/StyleCookingStatusCookTimeRemaining"
                android:focusableInTouchMode="false"
                android:visibility="@{isVisionRecipe ? View.GONE : View.VISIBLE}"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="185/190" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBarRecipeCookTime"
            style="@style/running_status_progressbar"
            android:clipToOutline="true"
            android:visibility="visible"
            android:transitionName="@string/transition_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clModeLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivProgressbarInfinite"
            style="@style/running_status_progressbar"
            android:clipToOutline="true"
            android:visibility="gone"
            android:transitionName="@string/transition_progress_bar_lottie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clModeLayout"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clWidgetAction"
            style="@style/StatusWidgetMainAction"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                android:id="@+id/tvSetOvenCookTime"
                style="@style/StatusWidgetTitleTextView"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                android:tag="@string/text_button_set_cook_time"
                android:text="@string/text_button_set_cook_time"
                android:visibility="@{isCookTimeAvailable || isVisionRecipe ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <View
                android:id="@+id/primary_cavity_time_divider"
                style="@style/StatusWidgetDivider"
                android:visibility="@{isCookTimeAvailable ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/llTurnOff"
                app:layout_constraintStart_toEndOf="@+id/tvSetOvenCookTime"
                tools:visibility="visible" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llTurnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/primary_oven_state_divider"
                app:layout_constraintStart_toEndOf="@+id/primary_cavity_time_divider"
                android:orientation="horizontal">

                <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                    android:id="@+id/tvOvenStateAction"
                    style="@style/StatusWidgetTitleTextView"
                    android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                    android:text="@string/text_button_turn_off"/>
                <View
                    android:layout_width="@dimen/status_widget_without_cook_time_view_width"
                    android:layout_height="wrap_content"
                    android:visibility="@{isCookTimeAvailable ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivOvenCavityMoreMenu"
                    app:layout_constraintStart_toEndOf="@+id/llTurnOff"
                    tools:visibility="gone"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/liveLookIn"
                style="@style/StatusWidgetTitleTextView"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                android:src="@drawable/cam_shrink"
                android:visibility="@{isVisionRecipe ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/primary_cavity_time_divider"/>

            <View
                android:id="@+id/primary_oven_state_divider"
                style="@style/StatusWidgetDivider"
                android:visibility="@{isCookTimeAvailable ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivOvenCavityMoreMenu"
                app:layout_constraintStart_toEndOf="@+id/llTurnOff"
                tools:visibility="visible" />


            <ImageView
                android:id="@+id/ivOvenCavityMoreMenu"
                style="@style/StatusWidgetTitleTextView"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                android:src="@drawable/more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/tvResumeCooking"
            style="@style/StatusWidgetTitleTextView"
            android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
            android:text="@string/text_resume_cooking_status_button"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>