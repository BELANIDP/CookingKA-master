<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="primaryCookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="primaryRecipeExecutionViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="secondaryCookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />

        <variable
            name="secondaryRecipeExecutionViewModel"
            type="com.whirlpool.hmi.cooking.recipeexecution.RecipeExecutionViewModel" />

        <variable
            name="farStatusFragment"
            type="android.presenter.basefragments.AbstractFarStatusFragment" />

        <variable
            name="isKitchenTimerEnding"
            android:value="false"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/width_app_window"
        android:background="@color/common_solid_black"
        android:layout_height="@dimen/height_app_window">

        <android.presenter.customviews.widgets.status.CookingFarStatusWidget
            android:id="@+id/primaryStatusWidget"
            android:layout_width="@dimen/width_app_window"
            android:layout_height="@dimen/far_view_parent_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="@dimen/far_view_double_status_top_margin"

            app:far_status_execution_fragment="@{farStatusFragment}"
            app:far_status_execution_view_model="@{primaryCookingViewModel}"
            app:far_status_execution_state="@{primaryRecipeExecutionViewModel.recipeExecutionState}"

            app:far_status_temperature_fragment="@{farStatusFragment}"
            app:far_status_temperature_cook_view_model="@{primaryCookingViewModel}"
            app:far_status_temperature_cooking_state="@{primaryRecipeExecutionViewModel.recipeCookingState}"
            app:far_status_temperature_recipe_name="@{primaryRecipeExecutionViewModel.recipeName}"
            app:far_status_temperature_display_temperature="@{primaryCookingViewModel.ovenDisplayTemperature}"
            app:far_status_temperature_target_temperature="@{primaryRecipeExecutionViewModel.targetTemperature}"


            app:far_status_progress_bar_cook_view_model="@{primaryCookingViewModel}"
            app:far_status_progress_bar_fragment="@{farStatusFragment}"
            app:far_status_progress_bar_basis="@{primaryRecipeExecutionViewModel.recipeProgressBasis}"
            app:far_status_progress_bar_cook_timer_state="@{primaryRecipeExecutionViewModel.cookTimerState}"
            app:far_status_progress_bar_progress_percentage="@{primaryRecipeExecutionViewModel.recipeProgressPercentage}"
            app:far_status_etr_cook_timer_remaining_cook_time="@{primaryRecipeExecutionViewModel.remainingCookTime}"
            app:far_status_progress_recipe_execution_state="@{primaryRecipeExecutionViewModel.recipeExecutionState}"

            app:far_status_preheat_cook_view_model="@{primaryCookingViewModel}"
            app:far_status_preheat_fragment="@{farStatusFragment}"
            app:far_status_preheat_notification="@{primaryRecipeExecutionViewModel.notification}"
            app:status_etr_cook_time_probe_connection_state="@{primaryCookingViewModel.meatProbeState.booleanValue()}"
            app:status_etr_cook_time_probe_current_temperature="@{primaryCookingViewModel.meatProbeTemperature}"
            app:status_etr_cook_time_probe_target_temperature="@{primaryRecipeExecutionViewModel.meatProbeTargetTemperature}"

            app:far_status_cook_time_completed_fragment="@{farStatusFragment}"
            app:far_status_cook_time_completed_view_model="@{primaryCookingViewModel}"
            app:far_status_cook_time_completed_since="@{primaryRecipeExecutionViewModel.readySinceTime}"
            app:far_status_cook_time_probe_target_temperature_reached="@{primaryRecipeExecutionViewModel.targetMeatProbeTemperatureReached.booleanValue()}"

            app:far_status_user_instruction="@{primaryRecipeExecutionViewModel.userInstruction}"
            app:far_status_user_instruction_fragment="@{farStatusFragment}"
            app:far_status_user_instruction_cook_view_model="@{primaryCookingViewModel}"
            />

        <android.presenter.customviews.widgets.status.CookingFarStatusWidget
            android:id="@+id/secondaryStatusWidget"
            android:layout_width="@dimen/width_app_window"
            android:layout_height="@dimen/far_view_parent_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginBottom="@dimen/far_view_double_status_bottom_margin"

            app:far_status_execution_fragment="@{farStatusFragment}"
            app:far_status_execution_view_model="@{secondaryCookingViewModel}"
            app:far_status_execution_state="@{secondaryRecipeExecutionViewModel.recipeExecutionState}"

            app:far_status_temperature_fragment="@{farStatusFragment}"
            app:far_status_temperature_cook_view_model="@{secondaryCookingViewModel}"
            app:far_status_temperature_cooking_state="@{secondaryRecipeExecutionViewModel.recipeCookingState}"
            app:far_status_temperature_recipe_name="@{secondaryRecipeExecutionViewModel.recipeName}"
            app:far_status_temperature_display_temperature="@{secondaryCookingViewModel.ovenDisplayTemperature}"
            app:far_status_temperature_target_temperature="@{secondaryRecipeExecutionViewModel.targetTemperature}"

            app:far_status_progress_bar_cook_view_model="@{secondaryCookingViewModel}"
            app:far_status_progress_bar_fragment="@{farStatusFragment}"
            app:far_status_progress_bar_basis="@{secondaryRecipeExecutionViewModel.recipeProgressBasis}"
            app:far_status_progress_bar_cook_timer_state="@{secondaryRecipeExecutionViewModel.cookTimerState}"
            app:far_status_progress_bar_progress_percentage="@{secondaryRecipeExecutionViewModel.recipeProgressPercentage}"
            app:far_status_etr_cook_timer_remaining_cook_time="@{secondaryRecipeExecutionViewModel.remainingCookTime}"
            app:far_status_progress_recipe_execution_state="@{secondaryRecipeExecutionViewModel.recipeExecutionState}"

            app:far_status_preheat_cook_view_model="@{secondaryCookingViewModel}"
            app:far_status_preheat_fragment="@{farStatusFragment}"
            app:far_status_preheat_notification="@{secondaryRecipeExecutionViewModel.notification}"
            app:status_etr_cook_time_probe_current_temperature="@{secondaryCookingViewModel.meatProbeTemperature}"
            app:status_etr_cook_time_probe_target_temperature="@{secondaryRecipeExecutionViewModel.meatProbeTargetTemperature}"
            app:status_etr_cook_time_probe_connection_state="@{secondaryCookingViewModel.meatProbeState.booleanValue()}"

            app:far_status_cook_time_completed_fragment="@{farStatusFragment}"
            app:far_status_cook_time_completed_view_model="@{secondaryCookingViewModel}"
            app:far_status_cook_time_completed_since="@{secondaryRecipeExecutionViewModel.readySinceTime}"
            app:far_status_cook_time_probe_target_temperature_reached="@{secondaryRecipeExecutionViewModel.targetMeatProbeTemperatureReached.booleanValue()}"

            app:far_status_user_instruction="@{secondaryRecipeExecutionViewModel.userInstruction}"
            app:far_status_user_instruction_fragment="@{farStatusFragment}"
            app:far_status_user_instruction_cook_view_model="@{secondaryCookingViewModel}"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kitchen_timer_far_view"
            android:layout_width="@dimen/width_app_window"
            android:layout_height="@dimen/height_app_window"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible"
            android:visibility="gone">

            <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
                android:id="@+id/kitchen_timer_far_view_header_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="visible" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_kitchen_timer_far_view"
                style="@style/KitchenTimerIconStyle"
                android:src="@drawable/ic_kitchen_timer"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_kitchen_timer_running_text_far_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_view_kitchen_timer_running_text_far_view"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_kitchen_timer_running_text_far_view"
                style="@style/KTClockTextViewStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"
                tools:text="14:59" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>