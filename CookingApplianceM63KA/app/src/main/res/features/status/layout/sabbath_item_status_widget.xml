<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <import type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModelFactory" />
        <variable
            name="cookingViewModel"
            type="com.whirlpool.hmi.cooking.viewmodel.CookingViewModel" />
        <variable
            name="cookingStatusWidget"
            type="android.presenter.customviews.widgets.status.CookingStatusWidget" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusPrentView"
        android:layout_width="@dimen/width_app_window"
        android:layout_height="@dimen/status_widget_height"
        android:background="@color/common_solid_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clModeLayout"
            android:layout_width="@dimen/width_app_window"
            android:layout_height="@dimen/status_item_mode_height"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/status_cooking_container_width"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivOvenCavity"
                    style="@style/StatusWidgetOvenCavityIconStyle"
                    android:visibility="@{CookingViewModelFactory.getProductVariantEnum() == CookingViewModelFactory.ProductVariantEnum.COMBO || CookingViewModelFactory.getProductVariantEnum() == CookingViewModelFactory.ProductVariantEnum.DOUBLEOVEN ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                    android:id="@+id/tvRecipeWithTemperature"
                    style="@style/StyleCookingStatusWidgetTextView"
                    android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivOvenCavity"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/sabbathBake" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                android:id="@+id/tvCookTimeRemaining"
                style="@style/StyleCookingStatusCookTimeRemaining"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBarRecipeCookTime"
            style="@style/running_status_progressbar"
            android:clipToOutline="true"
            android:visibility="visible"
            android:transitionName="@string/transition_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clModeLayout"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clWidgetAction"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                android:id="@+id/tvSabbathTemperatureDown"
                style="@style/SabbathStatusWidgetTitleTextView"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription"
                tools:text="-5°"/>

            <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
                android:id="@+id/tvSabbathTemperatureUp"
                style="@style/SabbathStatusWidgetTitleTextView"
                android:onClick="@{(view)->cookingStatusWidget.onViewClick(view,cookingViewModel)}"
                tools:text="+5°"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>