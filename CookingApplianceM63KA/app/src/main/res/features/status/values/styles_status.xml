<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="status_progressbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/progressbar_width_large</item>
        <item name="android:layout_height">@dimen/progressbar_height_large</item>
        <item name="android:progressDrawable">@drawable/progress_0_rectangle</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="running_status_progressbar" parent="status_progressbar">
        <item name="android:layout_width">@dimen/progressbar_width_medium</item>
        <item name="android:layout_marginTop">@dimen/bottom_view_margin</item>
    </style>
    <style name="running_far_view_status_progressbar" parent="status_progressbar">
        <item name="android:layout_marginTop">@dimen/far_view_status_margin</item>
    </style>
    <style name="StatusWidgetTitleTextView" parent="BaseStyleTitleText32White">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:padding">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/text_view_ripple_effect</item>
    </style>
    <style name="StatusWidgetTitleDisableTextView" parent="StatusWidgetTitleTextView">
        <item name="android:textColor">@color/text_button_disabled_grey</item>
    </style>
    <style name="StatusFragmentTitleCavityTextView" parent="BaseStyleTitleText36White">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">@dimen/cavity_selection_title_text_height</item>
    </style>
    <style name="StyleStatusWidgetLayout">
        <item name="android:layout_width">@dimen/width_app_window</item>
        <item name="android:layout_height">@dimen/status_widget_height</item>
    </style>

    <style name="SabbathStyleDoubleStatusUpperWidgetLayout" parent = "StyleStatusWidgetLayout">
        <item name="android:layout_marginTop">@dimen/sabbath_double_status_upper_cooking_widget_marginTop</item>
    </style>
    <style name="SabbathStyleDoubleStatusLowerWidgetLayout" parent = "StyleStatusWidgetLayout">
        <item name="android:layout_marginBottom">@dimen/sabbath_double_status_lower_cooking_widget_marginBottom</item>
    </style>

    <style name="StyleModeStatusTextView" parent="AutoScrollStatusTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineHeight">48sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="StyleModeFarViewStatusTextView" parent="AutoScrollStatusTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AutoScrollStatusTextView">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="StylePreheatReadyStatusWidgetTextView" parent="StyleModeStatusTextView">
        <item name="android:textSize">@dimen/status_preheat_text_size</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="StyleCookingStatusWidgetTextView" parent="StyleModeStatusTextView">
        <item name="android:textSize">@dimen/status_cooking_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:maxWidth">@dimen/status_cooking_text_recipe_main_max_width</item>
    </style>
    <style name="SabbathStyleCookingStatusWidgetErrorTextView" parent="StyleModeStatusTextView">
        <item name="android:textSize">@dimen/status_cooking_text_size</item>
        <item name="android:textColor">@color/notification_red</item>
    </style>
    <style name="StyleCookingStatusCookTimeRemaining" parent="StyleCookingStatusWidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/status_cooking_time_remaining_maxwidth</item>
        <item name="android:textSize">@dimen/status_cooking_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="StyleCookingFarViewStatusWidgetTextView" parent="StyleModeFarViewStatusTextView">
        <item name="android:textSize">@dimen/far_view_status_cooking_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="StyleCookingCompletedFarViewStatusWidgetTextView" parent="StyleModeFarViewStatusTextView">
        <item name="android:textSize">@dimen/far_view_status_cooking_completed_text_size</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:layout_marginTop">@dimen/far_view_status_margin</item>
    </style>
    <style name="StatusWidgetDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/widget_divider_height</item>
        <item name="android:background">@color/solid_white</item>
        <item name="android:layout_marginTop">@dimen/divider_margin_top</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin_bottom</item>

    </style>
    <style name="StatusWidgetMainAction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_mode_height</item>
        <item name="android:layout_marginStart">@dimen/status_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/status_item_margin</item>
    </style>
    <style name="StatusWidgetRecipeAction">
        <item name="android:layout_width">@dimen/width_app_window</item>
        <item name="android:layout_height">@dimen/status_item_mode_height</item>
        <item name="android:paddingStart">@dimen/status_item_margin</item>
        <item name="android:paddingEnd">@dimen/status_item_margin</item>
    </style>
    <style name="StatusWidgetMoreIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/more</item>
        <item name="android:layout_marginEnd">@dimen/divider_margin_right</item>
        <item name="android:layout_marginStart">@dimen/divider_margin_left</item>
    </style>
    <style name="StatusFragmentCavitySelectionLayout">
        <item name="android:layout_width">@dimen/status_button_cavity_selection_width</item>
        <item name="android:layout_height">@dimen/status_button_cavity_selection_height</item>
        <item name="android:layout_marginBottom">@dimen/running_status_cavity_selection_button_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/running_status_cavity_selection_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/running_status_cavity_selection_button_margin</item>
        <item name="android:background">@drawable/button_idle_ripple_effect</item>
    </style>
    <style name="StatusFragmentCavityLowerSelectionLayout">
        <item name="android:layout_marginTop">@dimen/running_status_cavity_selection_button_margin_top</item>
        <item name="android:layout_marginStart">@dimen/running_status_cavity_selection_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/running_status_cavity_selection_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/running_status_cavity_selection_button_margin</item>
        <item name="android:layout_width">@dimen/status_button_cavity_selection_width</item>
        <item name="android:layout_height">@dimen/status_button_cavity_selection_height</item>
        <item name="android:background">@drawable/button_idle_ripple_effect</item>
    </style>
    <style name="StatusFragmentCavityIcon">
        <item name="android:layout_width">@dimen/cavity_selection_image_width_and_height</item>
        <item name="android:layout_height">@dimen/cavity_selection_image_width_and_height</item>
        <item name="android:layout_marginEnd">@dimen/cavity_selection_image_margin</item>
        <item name="android:src">@drawable/ic_oven_cavity</item>
    </style>
    <style name="StatusWidgetOvenCavityIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_oven_cavity</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="StatusWidgetOvenProbeIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_oven_cavity</item>
        <item name="android:paddingStart">16dp</item>
    </style>
    <style name="FarViewStatusWidgetOvenCavityIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/far_view_upper_cavity</item>
        <item name="android:layout_marginEnd">@dimen/far_view_status_margin</item>
    </style>
    <style name="StatusWidgetTemperatureRampStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/tc_status_temperature_ramp_up</item>
        <item name="android:layout_marginStart">@dimen/bottom_view_margin</item>
    </style>
    <style name="FarViewStatusWidgetTemperatureRampStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/far_view_ramp_up</item>
        <item name="android:layout_marginStart">@dimen/far_view_status_margin</item>
    </style>
    <style name="StyleFarViewProbeTemperatureTextView">
        <item name="android:textSize">@dimen/far_view_probe_temperature_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/far_view_status_cooking_text_line_space</item>
        <item name="android:lineHeight">@dimen/far_view_status_cooking_text_line_height</item>
    </style>
    <style name="SabbathStatusWidgetTitleTextView" parent="BaseStyleTitleText32White">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/bottom_view_margin</item>
        <item name="android:layout_marginEnd">@dimen/status_item_margin</item>
        <item name="android:layout_marginStart">@dimen/status_item_margin</item>
    </style>
    <style name="FarStatusWidgetProbeIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_probe_icon_large</item>
        <item name="android:layout_marginStart">@dimen/far_view_status_margin</item>
    </style>
</resources>