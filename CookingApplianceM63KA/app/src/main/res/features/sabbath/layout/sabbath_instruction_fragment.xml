<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        style="@style/StyleManualModelInstructionScreen">

        <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
            android:id="@+id/header_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_solid_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            style="@style/StyleSabbathModeInstructionScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_bar">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description_text"
                style="@style/StyleManualModeInstructionText"
                android:text="@string/text_description_sabbathMode"/>

        </androidx.core.widget.NestedScrollView>

        <android.presenter.customviews.textButton.IconTextButton
            android:id="@+id/text_button_right"
            style="@style/StyleManualModeRightButton"
            app:icon_button_text="@string/text_button_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.presenter.customviews.textButton.IconTextButton
            android:id="@+id/text_button_left"
            style="@style/StyleManualModeLeftButton"
            app:icon_button_text="@string/text_button_dont_show_again"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
