<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_solid_black"
    tools:context="android.presenter.fragments.favorites.HistoryFragment">

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listHistory"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fav_margin_top"
        android:paddingBottom="@dimen/fav_landing_item_height"
        app:layout_constraintTop_toBottomOf="@+id/headerBar"
        tools:itemCount="3"
        tools:listitem="@layout/item_cycle_history" />

    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HistorySubTitleText"
        android:id="@+id/textNoHistory"
        tools:visibility="visible"
        android:visibility="gone"
        android:text="@string/text_history_empty_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>