<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_solid_black"
    tools:context="android.presenter.fragments.favorites.ChooseSmallImageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listImages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fav_image_height_width"
        android:layout_marginStart="@dimen/fav_small_image_margin_start"
        android:layout_marginTop="@dimen/fav_small_image_margin_top"
        android:layout_marginEnd="@dimen/fav_small_image_margin_end"
        tools:listitem="@layout/item_small_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerBar" />

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
