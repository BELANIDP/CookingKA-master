<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fav_landing_item_height"
    android:background="@color/very_dark_grey">

    <ImageView
        android:id="@+id/imageFavoritedRecipe"
        android:layout_width="@dimen/fav_image_width"
        android:layout_height="@dimen/fav_from_item_height"
        android:contentDescription="@string/text_header_create_favorite"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/background" />

    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:id="@+id/textTitle"
        style="@style/HistoryTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="@dimen/fav_max_width"
        android:maxLines="1"
        tools:textLocale="us"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/imageFavoritedRecipe"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bake" />

    <ImageView
        android:id="@+id/imageCavityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fav_from_item_margin"
        android:contentDescription="@string/history"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/cavity_lower" />

    <ImageView
        android:id="@+id/imageProbeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/history"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="@dimen/fav_probe_icon_margin_end"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_probe_oven" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holderLongClick"
        android:layout_width="@dimen/fav_holder_width"
        android:layout_height="@dimen/fav_delete_icon_hw"
        android:layout_marginEnd="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageDeleteFav"
            android:layout_width="@dimen/fav_delete_icon_hw"
            android:layout_height="@dimen/fav_delete_icon_hw"
            android:background="@drawable/ic_delete_fav"
            android:contentDescription="@string/history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCancel"
            android:layout_width="@dimen/fav_delete_icon_hw"
            android:layout_height="@dimen/fav_delete_icon_hw"
            android:layout_marginStart="24dp"
            android:background="@drawable/ic_cancel_fav"
            android:contentDescription="@string/history"
            app:layout_constraintStart_toEndOf="@+id/imageDeleteFav"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fav_item_divider_height"
        android:background="@color/common_solid_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFavoritedRecipe" />
</androidx.constraintlayout.widget.ConstraintLayout>