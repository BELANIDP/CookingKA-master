<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_solid_black"
    tools:context="android.presenter.fragments.favorites.HistoryFragment">

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fav_margin_top"
        android:layout_marginStart="@dimen/fav_from_item_margin"
        android:layout_marginEnd="@dimen/fav_from_item_margin"
        android:paddingBottom="@dimen/fav_landing_item_height"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/headerBar"
        tools:itemCount="3"
        tools:listitem="@layout/item_favorites" />


</androidx.constraintlayout.widget.ConstraintLayout>