<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_view"
        style="@style/DefaultDiagnosticsScreenStyle">

        <android.presenter.customviews.widgets.headerBarNumpad.HeaderBarNumPadWidget
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerBarHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_view_helper_text"
            style="@style/DiagnosticsHelperTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/text_view_system_edit_text"
            style="@style/DiagnosticsHelperTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_helper_red_warning_text"
            style="@style/DiagnosticsHelperTextStyle"
            android:textColor="@color/notification_red"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.keyboard.KeyboardView
            android:id="@+id/keyboard"
            style="@style/AlphaNumericKeyBoardStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
           android:layout_marginHorizontal="@dimen/keyboard_symbol_margin"
            android:layout_marginTop="@dimen/keyboard_alphanumeric_top_margin"
            app:keyBackground="@drawable/ic_keyboard_key_background"
            app:keyboardAlpha="@xml/service_keyboard_symbols_local"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_helper_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:providePredictionCandidates="false"
            app:showKeyPopups="false" />

        <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
            android:id="@+id/next_button"
            style="@style/TumblerPrimaryBtnStyle"
            android:padding="@dimen/text_button_padding"
            android:layout_marginEnd="@dimen/diagnostics_next_button_margin_end"
            android:text="@string/str_next"
            app:selection_audio="none"
            app:textAllCaps="true"
            app:enable="true"
            android:visibility="gone"
            app:is_bottom_view_visible="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>