<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FavCreateUpto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:translationY">-0.42sp</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:layout_marginStart">@dimen/fav_text_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/fav_text_margin_side</item>
    </style>
    <style name="FavCreateNew">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="HistoryTitleText">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="HistorySubTitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="HistoryDayText">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="FavoritesFromTitleText">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:translationY">-0.42sp</item>
        <item name="android:titleMarginStart">32dp</item>
        <item name="android:titleMarginEnd">32dp</item>
    </style>
    <style name="FavoritesHelperText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:translationY">-0.42sp</item>
    </style>

</resources>