<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ApplianceFeaturesButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineHeight">@dimen/buttons_line_height_38</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_button_text_size</item>
        <item name="android:padding">@dimen/bottom_button_padding</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/guide_header_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/bottom_button_margin_start</item>
        <item name="android:background">@drawable/text_view_ripple_effect</item>
    </style>

    <style name="ApplianceFeaturesImageStyle">
        <item name="android:layout_marginStart">@dimen/guide_image_margin_start</item>
        <item name="android:layout_marginTop">@dimen/guide_image_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/guide_image_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/guide_image_margin_bottom</item>
        <item name="android:layout_width">@dimen/guide_image_video_size</item>
        <item name="android:layout_height">@dimen/guide_image_video_size</item>
    </style>

    <style name="ApplianceFeaturesGuideLongTextViewStyle" parent="Style30SpRegularWhite">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/guide_description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/guide_description_margin_start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="ApplianceFeaturesHeaderTitleStyle" parent="BaseTextStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/guide_header_height</item>
        <item name="android:layout_marginTop">@dimen/guide_header_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/guide_header_margin_bottom</item>
    </style>
    <style name="ApplianceFeaturesGuideTitleTextViewStyle" parent="Style30SpRegularWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|top</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/guide_title_margin_top</item>
        <item name="android:layout_marginStart">@dimen/guide_header_margin_top</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_400</item>
        <item name="android:lineHeight">@dimen/manual_mode_subtitle_line_height_36</item>
    </style>

    <style name="Style30SpRegularWhite">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ApplianceFeaturesGuideFragmentScroll" parent="StylePopupTextScrollBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/guide_scrollview_height</item>
        <item name="android:fadingEdgeLength">@dimen/guide_scrollview_fadingEdgeLength</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:paddingEnd">@dimen/guide_scrollview_padding_end</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarFadeDuration">1000</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:fastScrollEnabled">true</item>
    </style>

    <style name="RegionalParentSwitchStyle">
        <item name="android:layout_width">@dimen/regional_settings_parent_view_width</item>
        <item name="android:layout_height">@dimen/regional_settings_parent_view_height</item>
        <item name="android:background">@color/color_black</item>
    </style>
    <style name="RegionalToggleSwitchNormalStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_400</item>
        <item name="android:lineHeight">@dimen/regional_settings_right_value_line_height</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/regional_settings_right_value_textsize</item>
        <item name="android:visibility">visible</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="RegionalToggleSwitchDisableStyle">
        <item name="android:layout_width">@dimen/regional_settings_child_view_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_300</item>
        <item name="android:lineHeight">@dimen/regional_settings_right_value_line_height</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/regional_settings_right_value_textsize</item>
        <item name="android:visibility">visible</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RegionalRecyclerViewStyle">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarFadeDuration">@integer/scrollbarfade_duration</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
        <item name="android:scrollbarSize">@dimen/regional_settings_recyclerview_divider_width</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>

    <style name="UnboxingVerticalTumblerTextViewSelectedStyle">
        <item name="android:layout_width">@dimen/unboxing_tumbler_item_width</item>
        <item name="android:layout_height">@dimen/vertical_tumbler_item_parent_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/unboxing_tumbler_text_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/common_solid_white</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="UnboxingVerticalTumblerTextViewStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">@dimen/vertical_tumbler_text_size</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_400</item>
        <item name="android:gravity">bottom</item>
        <item name="android:lineSpacingExtra">@dimen/vertical_tumbler_line_space</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/kt_unselected_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="UnboxingAMPMVerticalTumblerTextViewSelectedStyle">
        <item name="android:layout_width">@dimen/unboxing_tumbler_item_height</item>
        <item name="android:layout_height">@dimen/unboxing_tumbler_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_400</item>
        <item name="android:textSize">@dimen/unboxing_tumbler_am_pm_text_size</item>
        <item name="android:lineHeight">@dimen/unboxing_tumbler_am_pm_line_height</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:lineSpacingExtra">@dimen/unboxing_tumbler_am_pm_text_size_selected_line_space</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="UnboxingAMPMVerticalTumblerTextViewUnSelectedStyle">
        <item name="android:layout_width">@dimen/unboxing_tumbler_item_height</item>
        <item name="android:layout_height">@dimen/unboxing_tumbler_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_400</item>
        <item name="android:textSize">@dimen/unboxing_tumbler_am_pm_text_size_unselected</item>
        <item name="android:lineHeight">@dimen/unboxing_tumbler_am_pm_unselected_line_height</item>
        <item name="android:lineSpacingExtra">@dimen/unboxing_tumbler_am_pm_text_size_unselected_line_space</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="NumPadAmPmTextStyle">
        <item name="android:visibility">visible</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_300</item>
        <item name="android:layout_width">@dimen/setup_later_numPad_am_pm_width</item>
        <item name="android:layout_height">@dimen/setup_later_numPad_am_pm_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:lineHeight">@dimen/numPad_am_pm_line_height</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:font">@font/roboto_light</item>
        <item name="android:textSize">@dimen/numPad_am_pm_textsize</item>
        <item name="text_activeColor">@color/solid_white</item>
        <item name="text_inactiveColor">@color/solid_white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">@dimen/numPad_am_pm_line_space</item>
        <item name="suffixShiftPercentage">0.30</item>
        <item name="suffixUnderlineType">solid</item>
        <item name="text_blink_color">@color/colorWhite</item>
        <item name="suffixUnderlineColor">@color/under_line_color</item>
        <item name="underlineOffsetFromText">@dimen/setup_later_numPad_am_pm_offset_text</item>
        <item name="underlineStrokeSize">@dimen/setup_later_numPad_am_pm_stroke_size</item>
        <item name="dotOffset">@dimen/setup_later_numPad_am_pm_dot_offset</item>
        <item name="dotWidth">@dimen/setup_later_numPad_am_pm_dot_width</item>
    </style>
    <style name="NumpadDateMMDDYYTextStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:fontWeight">@integer/unboxing_font_weight_300</item>
        <item name="android:lineHeight">@dimen/numpad_date_time_line_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:textSize">@dimen/numpad_date_time_textsize</item>
        <item name="android:visibility">visible</item>
        <item name="text_activeColor">@color/solid_white</item>
        <item name="text_inactiveColor">@color/solid_white</item>
        <item name="android:layout_width">@dimen/setup_later_numPad_date_unit_width</item>
        <item name="android:layout_height">@dimen/setup_later_numPad_date_unit_height</item>
    </style>
</resources>