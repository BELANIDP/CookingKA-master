<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/color_black">


    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:minHeight="@dimen/vertical_tumbler_item_parent_height"
        android:layout_width="@dimen/unboxing_tumbler_item_width"
        android:layout_height="wrap_content"
        tools:background="@color/color_black">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/UnboxingVerticalTumblerTextViewSelectedStyle"
            android:layout_width="@dimen/unboxing_tumbler_item_width"
            android:layout_height="@dimen/vertical_tumbler_item_enable_height"
            android:layout_marginTop="@dimen/vertical_tumbler_text_margin_top_removed_9dp"
            android:includeFontPadding="false"
            android:gravity="top|center_horizontal"
            android:layout_gravity="top|clip_horizontal"
            android:visibility="visible"
            tools:text="00" />
        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/titleUnSelected"
            style="@style/UnboxingVerticalTumblerTextViewStyle"
            android:layout_width="@dimen/unboxing_tumbler_item_width"
            android:layout_marginTop="@dimen/vertical_tumbler_text_margin_top_removed_4dp"
            android:layout_height="@dimen/vertical_tumbler_item_disable_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            tools:text="11" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/titleAmPm"
            style="@style/UnboxingAMPMVerticalTumblerTextViewSelectedStyle"
            android:layout_width="@dimen/unboxing_tumbler_item_width"
            android:layout_height="@dimen/vertical_tumbler_item_disable_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            tools:text="AM" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/titleAmPmUnSelected"
            style="@style/UnboxingAMPMVerticalTumblerTextViewUnSelectedStyle"
            android:layout_width="@dimen/unboxing_tumbler_item_width"
            android:layout_height="@dimen/vertical_tumbler_item_disable_height"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone"
            tools:text="AM" />
        <View
            android:id="@+id/bottomLine"
            android:layout_width="@dimen/kt_tumbler_bottom_line_width"
            android:layout_height="@dimen/kt_tumbler_bottom_line_height"
            android:layout_gravity="bottom"
            android:background="@color/kt_tumbler_bottom_line_color"
            android:visibility="invisible"
            tools:visibility="visible" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>