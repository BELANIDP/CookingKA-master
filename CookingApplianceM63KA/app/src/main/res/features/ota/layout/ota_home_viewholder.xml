<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_ota_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_solid_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/software_details"
            android:layout_width="@dimen/software_details_layout_width"
            android:layout_height="@dimen/software_details_layout_height"
            android:layout_marginStart="@dimen/software_details_layout_start_margin"
            android:layout_marginTop="@dimen/software_details_layout_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/software_update_scheduled"
                style="@style/StyleSoftwareUpdateScheduled"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/software_details_layout_scheduled_height"
                android:layout_marginStart="@dimen/software_details_layout_scheduled_start_margin"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/this_may_take_minutes"
                style="@style/StyleSoftwareUpdateSubInfo"
                android:layout_width="@dimen/software_details_layout_width"
                android:layout_height="@dimen/cta_button_margin_end"
                android:layout_marginTop="@dimen/software_details_layout_scheduled_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/svWhatIsNew"
            style="@style/StyleInformationTextScrollBar"
            android:layout_marginStart="@dimen/custom_layout_ota_message_width_start_margin"
            android:layout_marginTop="@dimen/custom_layout_ota_message_width_top_margin"
            android:verticalScrollbarPosition="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvWhatIsNewTitle"
                    style="@style/Style30WhiteBold"
                    android:text="@string/text_sub_heading_Whats_new"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWhatIsNewReleaseInfo"
                    style="@style/StyleOtaReleaseInfo"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="@id/tvWhatIsNewTitle"
                    app:layout_constraintTop_toBottomOf="@id/tvWhatIsNewTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_tvSWUpToDate"
            android:layout_width="@dimen/information_upToDate_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/software_details_layout_UpToDate_start_margin"
            android:layout_marginTop="@dimen/software_details_layout_UpToDate_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvSWUpToDate"
                style="@style/StyleInformationUpToDate"
                android:layout_width="@dimen/information_upToDate_width"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSWUpToDateTime"
                style="@style/StyleInformationUpToDateDateTime"
                android:layout_width="@dimen/information_upToDate_width"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSWUpToDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/frame_ivSWUpToDateIcon"
            android:layout_width="@dimen/upToDate_icon_width_height"
            android:layout_height="@dimen/upToDate_icon_width_height"
            android:layout_marginStart="@dimen/upToDate_icon_margin_start"
            android:layout_marginTop="@dimen/upToDate_icon_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivSWUpToDateIcon"
                android:layout_width="@dimen/upToDate_icon_sub_width_height"
                android:layout_height="@dimen/upToDate_icon_sub_width_height"
                android:layout_marginStart="@dimen/upToDate_icon_sub_margin_start_top"
                android:layout_marginTop="@dimen/upToDate_icon_sub_margin_start_top"
                android:src="@drawable/icon_check_mark"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/unboxing_celebration_mark"
                android:layout_width="@dimen/upToDate_icon_sub_width_height"
                android:layout_height="@dimen/upToDate_icon_sub_width_height"
                android:layout_marginStart="@dimen/upToDate_icon_sub_margin_start_top"
                android:layout_marginTop="@dimen/upToDate_icon_sub_margin_start_top"
                app:lottie_rawRes="@raw/unboxing_celebration"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/version_details"
            style="@style/StyleVersionDetailsViewOtaCompleted"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/software_version_header"
                style="@style/StyleVersionHeader"
                android:text="@string/text_version"
                android:visibility="gone" />

            <TextView
                android:id="@+id/software_version_number"
                style="@style/StyleVersionNumber" />

        </LinearLayout>

        <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
            android:id="@+id/btnUpdateNow"
            style="@style/TumblerNumericPrimaryBtnStyle"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/tumbler_btn_margin_bottom"
            android:layout_marginBottom="@dimen/tumbler_update_btn_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/app_name"
            tools:visibility="visible" />

        <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
            android:id="@+id/btnSkipUpdate"
            style="@style/TumblerNumericGhostBtnStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/app_name"
            tools:visibility="visible" />

        <ScrollView
            android:id="@+id/information_primary_scroll_view"
            style="@style/StyleNewFeatureTextScrollBar"
            android:layout_marginTop="@dimen/upToDate_icon_margin_top"
            android:verticalScrollbarPosition="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/information_scrollable_primary_text_view"
                    style="@style/StyleInformationUpToDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/information_scrollable_secondary_text_view"
                    style="@style/StyleInformationUpToDateDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/information_scrollable_primary_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/information_scrollable_primary_text_view" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/frame_version"
            android:layout_width="@dimen/upToDate_icon_width_height"
            android:layout_height="@dimen/upToDate_icon_width_height"
            android:layout_marginStart="@dimen/upToDate_icon_margin_start"
            android:layout_marginTop="@dimen/upToDate_icon_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/software_update_complete_version_title"
                style="@style/StyleOTAVersionHeader"
                android:visibility="gone"
                android:text="@string/text_version"/>

            <TextView
                android:id="@+id/software_update_complete_version_number"
                android:visibility="gone"
                style="@style/StyleOTAVersionNumber"/>
        </FrameLayout>

        <com.whirlpool.hmi.uicomponents.widgets.buttons.NavigationButton
            android:id="@+id/btnDissmiss"
            style="@style/TumblerNumericPrimaryBtnStyle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>