<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_ota_download_install"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ota_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_solid_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_text"
                style="@style/StyleProgressDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_update" />

            <com.whirlpool.hmi.uicomponents.widgets.progress.HorizontalProgressBar
                android:id="@+id/progress_bar_update"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/ota_status_title_width"
                android:layout_height="@dimen/ota_status_title_height"
                android:indeterminate="false"
                android:progressDrawable="@drawable/service_progress_rectangle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:progress_bar_background_height="@dimen/ota_status_title_height"
                app:progress_bar_height="@dimen/ota_status_title_height"
                app:progress_bar_secondary_height="@dimen/ota_status_title_height" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame_text_view_main_error"
                android:layout_width="@dimen/information_upToDate_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/software_details_layout_UpToDate_start_margin"
                android:layout_marginTop="@dimen/software_details_layout_UpToDate_top_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_view_main_error"
                    style="@style/StyleInformationUpToDate"
                    android:layout_width="@dimen/information_upToDate_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_sub_error"
                    style="@style/StyleInformationUpToDateDateTime"
                    android:layout_width="@dimen/information_upToDate_width"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_main_error" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/frame_ivSWUpToDateIcon"
                android:layout_width="@dimen/upToDate_icon_width_height"
                android:layout_height="@dimen/upToDate_icon_width_height"
                android:layout_marginStart="@dimen/upToDate_icon_margin_start"
                android:layout_marginTop="@dimen/upToDate_icon_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_error"
                    android:layout_width="@dimen/upToDate_icon_sub_width_height"
                    android:layout_height="@dimen/upToDate_icon_sub_width_height"
                    android:layout_marginStart="@dimen/upToDate_icon_sub_margin_start_top"
                    android:layout_marginTop="@dimen/upToDate_icon_sub_margin_start_top"
                    android:src="@drawable/icon_alert"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ota_loading_hourglass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_hour_glass"
                android:layout_width="@dimen/custom_layout_ota_progress_hour_glass_size"
                android:layout_height="@dimen/custom_layout_ota_progress_hour_glass_size"
                android:layout_marginTop="184dp"
                android:layout_marginStart="371dp"
                android:background="@drawable/icon_hour_glass"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_ota_version"
                style="@style/StyleUpdatingVersionText"
                android:letterSpacing="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_do_not_unplug_appliance_description"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_hour_glass" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>