<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/preview_tile_width"
    android:layout_height="@dimen/preview_tile_height"
    tools:background="@color/common_solid_black">

    <!-- Primary TextView -->
    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:id="@+id/previewTilePrimaryTextView"
        style="@style/PreviewTileUpperTextView"
        android:layout_width="match_parent"
        android:gravity="center"
        tools:text="Mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Inner ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/previewTilePrimaryTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Secondary TextView -->
        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/previewTileSecondaryTextView"
            style="@style/StylePreviewTimeSecondaryTextView"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/preview_tile_sub_text_margin_top"
            android:paddingStart="@dimen/preview_tile_secondary_text_view_padding"
            android:paddingEnd="@dimen/preview_tile_secondary_text_view_padding"
            android:gravity="center"
            tools:text="Bake"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Divider -->
    <View
        android:id="@+id/tileDivider"
        android:layout_width="@dimen/preview_tile_divider_width"
        android:layout_height="wrap_content"
        android:background="@color/tumbler_separator_color_grey"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
