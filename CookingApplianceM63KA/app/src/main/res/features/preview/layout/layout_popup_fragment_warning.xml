<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transparent_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_solid_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/popup_with_scroll"
            style="@style/PopupViewStyle"
            android:visibility="visible"
            android:paddingTop="@dimen/_0dp"
            android:paddingBottom="@dimen/padding_bottom_popup_with_scroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/image_view_header_center"
                style="@style/PopUpHeaderCenterImageStyle"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_title"
                style="@style/PopupTitleTextViewStyleAlt"
                android:gravity="start"
                android:drawableStart="@drawable/ic_alert"
                android:drawablePadding="@dimen/popup_progress_margin_vertical"
                android:layout_marginHorizontal="@dimen/popup_title_margin_horizontal"
                android:layout_marginTop="@dimen/popup_title_margin_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/app_name" />

            <ProgressBar
                android:id="@+id/popup_progressbar"
                style="@style/PopupProgressBarStyle"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_notification"
                style="@style/PopupNotificationTextViewStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/app_name" />

            <ScrollView
                android:id="@+id/scroll_view"
                style="@style/PopupInfoScrollStyle"
                android:visibility="visible"
                android:layout_marginHorizontal="@dimen/popup_desc_margin_horizontal"
                android:layout_marginTop="@dimen/popup_scroll_margin_top_24"
                app:layout_constraintBottom_toTopOf="@id/text_button_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_description"
                    android:gravity="start"
                    style="@style/PopupDescriptionTextViewStyle" />
            </ScrollView>

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_left"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="true"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view" />

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_center"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="true"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view" />

            <android.presenter.customviews.textButton.TextButton
                android:id="@+id/text_button_right"
                style="@style/PopupTextButtonStyle"
                app:button_text="@string/app_name"
                app:enable="true"
                android:includeFontPadding="false"
                app:is_bottom_view_visible="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scroll_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
