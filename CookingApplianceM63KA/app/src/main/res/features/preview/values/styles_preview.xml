<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StylePreviewRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="StylePreviewTimeSecondaryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxHeight">@dimen/preview_tile_subtext_height</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">38sp</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreviewTileUpperTextView" parent="BaseStyleTitleText36White">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>
</resources>