<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_black">

    <android.presenter.customviews.widgets.headerbar.HeaderBarWidget
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="80dp"
        android:background="@color/common_solid_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceImageView
        android:id="@+id/ivCookingGuide"
        android:layout_width="@dimen/cooking_guide_recipe_image_width_200"
        android:layout_height="@dimen/cooking_guide_recipe_image_height_320"
        app:srcCompat="@drawable/img_assisted_cooking_guide_leaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bar"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="48dp"/>

    <ScrollView
        android:id="@+id/scroll_view_popup_info_text"
        style="@style/AssistedCookingGuideFragmentScroll"
        android:layout_height="@dimen/_0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPrimary"
        app:layout_constraintStart_toEndOf="@+id/ivCookingGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bar"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/text_view_popup_info"
            style="@style/AssistedCookingGuideFragmentLongTextViewStyle"
            android:layout_height="wrap_content" />
    </ScrollView>

    <com.whirlpool.hmi.uicomponents.widgets.progress.Stepper
        android:id="@+id/stepperCookingGuide"
        android:layout_width="60dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="59dp"
        android:layout_marginEnd="32dp"
        app:no_of_steps="2"
        app:non_highlighted_step_width="8dp"
        app:highlighted_step_width="10dp"
        app:padding_between_steps="8dp"
        app:step_default_drawable="@drawable/stepper_non_selected"
        app:step_highlighted_drawable="@drawable/stepper_selected"
        app:stepper_highlighted_mode="current_index" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRightButton"
        android:layout_width="@dimen/width_touch_constraint"
        android:layout_height="@dimen/height_touch_constraint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
        android:id="@+id/btnPrimary"
        style="@style/InstructionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/colorWhite"
        android:paddingVertical="13dp"
        android:paddingHorizontal="16dp"
        android:text="@string/text_button_next"/>
</androidx.constraintlayout.widget.ConstraintLayout>
