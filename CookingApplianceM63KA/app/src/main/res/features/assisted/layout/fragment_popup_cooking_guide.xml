<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="36dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_container_background_grey">

        <TextView
            android:id="@+id/tvTitleCookingGuide"
            style="@style/popupTitleAssistedTextView"
            android:text="@string/text_header_cooking_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <FrameLayout
            android:id="@+id/flRightIcon"
            style="@style/BaseStyleImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp">

            <ImageView
                android:id="@+id/ivRightIcon"
                style="@style/RightIconStyle"
                tools:ignore="ContentDescription"/>
        </FrameLayout>

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceImageView
            android:id="@+id/ivCookingGuide"
            android:layout_width="@dimen/cooking_guide_recipe_image_width_200"
            android:layout_height="@dimen/cooking_guide_recipe_image_height_200"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleCookingGuide"
            app:srcCompat="@drawable/img_assisted_cooking_guide_leaf_small" />

        <ScrollView
            android:id="@+id/scroll_view_popup_info_text"
            style="@style/AssistedCookingGuidePopupInfoScroll"
            app:layout_constraintBottom_toTopOf="@+id/btnPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCookingGuide"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleCookingGuide">

            <TextView
                android:id="@+id/text_view_popup_info"
                style="@style/AssistedCookingGuidePopUpLongTextViewStyle" />
        </ScrollView>

        <com.whirlpool.hmi.uicomponents.widgets.progress.Stepper
            android:id="@+id/stepperCookingGuide"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            app:highlighted_step_width="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:no_of_steps="2"
            app:non_highlighted_step_width="8dp"
            app:padding_between_steps="8dp"
            app:step_default_drawable="@drawable/stepper_non_selected"
            app:step_highlighted_drawable="@drawable/stepper_selected"
            app:stepper_highlighted_mode="current_index" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintRightButton"
            android:layout_width="@dimen/width_touch_constraint"
            android:layout_height="@dimen/height_touch_constraint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.whirlpool.hmi.uicomponents.widgets.resourcehelper.ResourceTextView
            android:id="@+id/btnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:text="@string/text_button_next"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>