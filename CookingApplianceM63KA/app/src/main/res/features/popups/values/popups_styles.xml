<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupJetStartViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">32dp</item>
        <item name="android:background">@color/popup_container_background_grey</item>
        <item name="android:layout_margin">@dimen/margin_popup_container</item>
    </style>

    <style name="PopupJetStartTextViewHeaderStyle" parent="Style40_Base">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineHeight">@dimen/popup_title_text_line_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="PopupJetStartTextViewFooterStyle" parent="Style30_Base">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/solid_white</item>
    </style>
</resources>