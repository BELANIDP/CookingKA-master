<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transparent_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_solid_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/popup_with_scroll"
            style="@style/PopupJetStartViewStyle"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_title"
                style="@style/PopupJetStartTextViewHeaderStyle"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"
                tools:text="@string/text_jetStart_starting_mwo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_progress"
                style="@style/PopupJetStartTextViewHeaderStyle"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible"
                tools:text="1" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="@dimen/progressbar_width_extrasmall"
                android:layout_height="@dimen/progressbar_width_extrasmall"
                android:id="@+id/popup_progressbar"
                app:indicatorSize="@dimen/progressbar_width_extrasmall"
                android:progress="1"
                app:trackColor="@color/progress_bar_background"
                app:trackThickness="8dp"
                app:indicatorColor="@color/walnut"
                app:layout_constraintBottom_toTopOf="@+id/text_view_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                android:indeterminateTintMode="src_in"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_notification"
                style="@style/PopupJetStartTextViewFooterStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/text_sub_description_Jet_start"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
